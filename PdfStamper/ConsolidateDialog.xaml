<Window x:Class="PdfStamper.ConsolidateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PdfStamper"
        mc:Ignorable="d"
        Title="Generate Document" 
        Height="450" 
        Width="800" 
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <CheckBox x:Name="stampCbb" Content="Create Page Stamp" HorizontalAlignment="Left" Height="24" Margin="29,23,0,0" VerticalAlignment="Top" Width="173"/>
        <Label Content="Stamp Text" HorizontalAlignment="Left" Height="25" Margin="246,17,0,0" VerticalAlignment="Top" Width="90"/>
        <TextBox x:Name="stampTxt" HorizontalAlignment="Left" Height="24" Margin="341,17,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="427"/>
        <Button x:Name="createBtn" Content="Create" HorizontalAlignment="Left" Height="26" Margin="653,385,0,0" VerticalAlignment="Top" Width="131" Click="createBtn_Click"/>

    </Grid>
</Window>
