<Window x:Class="PdfStamper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PdfStamper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel Margin="10,120,10,10">
            <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,0,0,10">
                <Button Name="btnOpenFile" Click="btnOpenFile_Click">Open file</Button>
            </WrapPanel>
            <TextBox Name="txtEditor" />
        </DockPanel>

        <Button x:Name="executeBtn" Content="GO!" HorizontalAlignment="Left" Height="25" Margin="19,18,0,0" VerticalAlignment="Top" Width="53" Click="executeBtn_Click"/>
        <TextBlock x:Name="outputTxt" HorizontalAlignment="Left" Height="87" Margin="82,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="683" RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.529"/>
                    <RotateTransform/>
                    <TranslateTransform Y="2.263"/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>

    </Grid>
</Window>
